<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:background="@color/background_color"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/progress_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3">

        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/name_progress_home"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/thumb_progress_home"
            android:ellipsize="end"
            android:fontFamily="@font/sansbold"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:text="Cristiano Ronaldo đá phạt đền"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            tools:ignore="RtlCompat" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/thumb_progress_home"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:scaleType="centerInside"
            android:src="@drawable/football" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/tab_layout_color" />


            <com.ctrlplusz.anytextview.AnyTextView
                android:id="@+id/tv_score_match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_5sdp"
                android:fontFamily="@font/sansre"
                android:gravity="center_horizontal"
                android:text="36'"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />


            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/tab_layout_color" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/progress_away"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/thumb_progress_away"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:scaleType="centerInside"
            android:src="@drawable/football" />


        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/name_progress_away"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/thumb_progress_away"
            android:ellipsize="end"
            android:fontFamily="@font/sansbold"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:text="Paraguay fasdasdas ádsadsasdfdsf"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />
    </RelativeLayout>
</LinearLayout>