<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.TransNav" parent="Theme.AppCompat" />
    <style name="customfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/sansbold</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/text_color_normal</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/customfontstyle</item>
        <item name="tabSelectedTextColor">@color/text_color_normal</item>
    </style>

    <style name="CustomTabLayoutSelect" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@drawable/tab_layout</item>
        <item name="tabTextAppearance">@style/customfontstyle</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

</resources>